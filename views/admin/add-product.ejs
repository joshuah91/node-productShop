<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" type="text/css" href="/css/product.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

      <main>
        <form autocomplete="on" class="product-form" action="/admin/add-product" method="POST">
          <div class="form-control">
              <label for="image">Image</label>
              <input type="text" name="image" id="image" placeholder="product-image" />
            </div>
            <div class="form-control">
              <label for="title">Title</label>
              <input type="text" name="title" id="title" placeholder="name of product" />
            </div>
            <div class="form-control">
              <label for="price">Price</label>
              <input type="number" name="price" id="price" placeholder="$" />
            </div>
            <div class="form-control">
              <label for="description">Description</label>
              <textarea name="description" id="description" placeholder="Short Description" rows="5"></textarea>
            </div>

          <button type="submit">Add product</button>
        </form>
      </main>
      <%- include('../includes/end.ejs') %>